<% if flash[:alert].present? %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:alert]  %>
    </div>
<% end %>
<%= form_for @book, method: 'patch' do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="isbn">
      <%= f.label :isbn %>
      <%= f.text_field :isbn %>
    </div>
    <%= f.text_field :user_id, :placeholder => " User_IDを入れてください", :class => "register_area" %>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
<div class="return">本を返す場合はUser_idを1にしてupdateしてください。</div>
<% @user.each do |u| %>
   <h2>
     <%= u.id %>
     <%= u.name %>
   </h2>
<% end %>